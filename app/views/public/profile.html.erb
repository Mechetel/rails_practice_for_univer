<div class="row">
  <div class="col-sm-8">
    <h3>Comments of this user</h3>
    <%= render partial: "comments/list", locals: { comments: @comments } %>
  </div>
  <div class="col-sm-4">
    <p class="h4"><%= @profile.full_name %></p>
    <p><%= @profile.username %></p>

    <p>Registration day: <%= @profile.created_at.strftime("%d/%m/%Y")%></p>
  </div>
</div>
